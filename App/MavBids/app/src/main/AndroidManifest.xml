<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mavbids" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mavbidslogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.Login"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppThemeNoTitle" >
        </activity>
        <activity
            android:name=".activity.HomeScreen"
            android:label="MavBids"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".activity.Register"
            android:label="MavBids Register"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".activity.ServerConnect"
            android:label="@string/title_activity_server_connect"
            android:theme="@style/AppThemeNoTitle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PostAdvertisement"
            android:label="@string/title_activity_post_advertisement"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".activity.Dashboard"
            android:label="@string/title_activity_dashboard" >
        </activity>
        <activity
            android:name=".activity.MyOrders"
            android:label="@string/title_activity_my_orders" >
        </activity>
        <activity
            android:name=".activity.MyReviews"
            android:label="@string/title_activity_my_reviews" >
        </activity>
        <activity
            android:name=".activity.MyAdvertisments"
            android:label="@string/title_activity_my_advertisments" >
        </activity>
        <activity
            android:name=".activity.Advertisement"
            android:label="@string/title_activity_advertisement" >
        </activity>
        <activity
            android:name=".activity.Manage"
            android:label="@string/title_activity_manage" >
        </activity>
        <activity
            android:name=".activity.ManageUsers"
            android:label="@string/title_activity_manage_users" >
        </activity>
        <activity
            android:name=".activity.ManageCategories"
            android:label="@string/title_activity_manage_categories" >
        </activity>
        <activity
            android:name=".activity.ManageAdvertisements"
            android:label="@string/title_activity_manage_advertisements" >
        </activity>
    </application>

</manifest>
