<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MyReviews"
    android:id="@+id/MyReviews">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/Submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
         />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#6a70ff"
        android:id="@+id/Names">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sam Mathew"
            android:id="@+id/radioButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:onClick="select"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rachel Bitner"
            android:id="@+id/radioButton2"
            android:layout_below="@+id/radioButton"
            android:layout_alignParentStart="true"
            android:onClick="select"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carol B"
            android:id="@+id/radioButton3"
            android:layout_below="@+id/radioButton2"
            android:layout_alignParentStart="true"
            android:onClick="select"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angela John"
            android:id="@+id/radioButton4"
            android:layout_below="@+id/radioButton3"
            android:layout_alignParentStart="true"
            android:onClick="select"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thomas wats"
            android:id="@+id/radioButton5"
            android:layout_below="@+id/radioButton4"
            android:layout_alignEnd="@+id/radioButton4"
            android:onClick="select"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:id="@+id/Review"
            android:hint="Enter Review"/>

    </RadioGroup>
</RelativeLayout>
